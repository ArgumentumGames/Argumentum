@inherits NBrightBuy.render.NBrightBuyRazorTokens<NBrightDNN.NBrightRazor>
@using NBrightDNN

@AddMetaData("resourcepath", "/DesktopModules/NBright/NBrightBuy/App_LocalResources/")
@AddMetaData("resourcepath", "/DesktopModules/NBright/NBrightBuy/Providers/PromoProvider/App_LocalResources/")

<div class="row">
    <div class="col-xs-12 col-sm-12">
        <div class="box">
            <div class="box-content">
                <table class="table table-striped table-hover table-responsive">
                    <thead>
                        <tr style="width:100%">
                            <th>@ResourceKey("Promo.groupselect")</th>
                            <th>@ResourceKey("Promo.name")</th>
                            <th>@ResourceKey("Promo.amount")</th>
                            <th>@ResourceKey("Promo.validfrom")</th>
                            <th>@ResourceKey("Promo.validuntil")</th>
                            <th>@ResourceKey("Promo.processorder")</th>
                            <th>@ResourceKey("Promo.disabled")</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (NBrightInfo x in Model.List)
                        {
                            // dummy record inject for empty list
                            if (x.ItemID > 0)
                            {
                                <tr>
                                    <td>
                                        @if (x.GetXmlProperty("genxml/radiobuttonlist/typeselect") == "cat")
                                        {
                                            @CategoryDropDownList(x, "genxml/dropdownlist/catgroupid", "class='form-control catdisplay'");
                                        }
                                        else
                                        {
                                            @PropertyDropDownList(x, "genxml/dropdownlist/propgroupid", "class='form-control propdisplay'");
                                        }
                                    </td>
                                    <td>@x.GetXmlProperty("genxml/textbox/name")</td>
                                    <td>
                                        @x.GetXmlProperty("genxml/textbox/amount")
                                    @if ((@x.GetXmlProperty("genxml/radiobuttonlist/amounttype") == "2"))
                                    {
                                        <span> %</span>
                                    }
                                </td>
                                    <td>
                                        @if (x.GetXmlPropertyInt("genxml/radiobuttonlist/runfreq") == 1)
                                        {
                                            @x.GetXmlProperty("genxml/textbox/validfrom")
                                        }
                                    </td>
                                    <td>
                                        @if (x.GetXmlPropertyInt("genxml/radiobuttonlist/runfreq") == 1)
                                        {
                                            @x.GetXmlProperty("genxml/textbox/validuntil")
                                        }
                                    </td>
                                    <td>@x.GetXmlPropertyInt("genxml/dropdownlist/processorder")</td>
                                    <td>
                                    @{var i = "fa-circle"; if (x.GetXmlPropertyBool("genxml/checkbox/disabled")) { i = "fa-check-circle"; }}
                                <i class="fa  @i fa-2x"></i>
                            </td>
                            <td><span class="edititem" itemid="@x.ItemID">@ResourceKey("General.cmdEditIcon")</span></td>
                        </tr>
                                        }
                                    }

                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>