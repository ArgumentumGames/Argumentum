@inherits NBrightBuy.render.NBrightBuyRazorTokens<NBrightDNN.NBrightRazor>
@using DotNetNuke.Common
@using DotNetNuke.Entities.Users
@using NBrightDNN
@using Nevoweb.DNN.NBrightBuy.Components
@using NBrightCore.common

@AddMetaData("resourcepath", "/DesktopModules/NBright/NBrightBuy/App_LocalResources/")

<div id="loader" class="processing" style="display:none;">@ResourceKey("General.ProcessingDiv")</div>


<!-- fields required to send required ajax cart to server -->
<span id="orderadminsearch">
    <input id="userid" type="hidden" value="@UserController.Instance.GetCurrentUserInfo().UserID" />
    <input id="razortemplate" type="hidden" value="" />
    <input id="themefolder" type="hidden" value="config" />
    <input id='editlang' type='hidden' value='@Model.Lang' /> <!-- get the current culture and pass to the ajax server side, so it knows what language is -->
    <input id="uilang" type="hidden" value="@Model.GetUrlParam("language")" /> <!-- default to current language -->
    <input id="pagesize" type="hidden" value="20" />
    <input id="pagenumber" type="hidden" value="1" />
    <input id="searchtext" type="hidden" value="" />
    <input id="dtesearchdatefrom" type="hidden" value="" datatype='date' />
    <input id="dtesearchdateto" type="hidden" value="" datatype='date' />
    <input id="searchorderstatus" type="hidden" value="" />
    <input id="selecteditemid" type="hidden" value="" />
    <input id="selecteduserid" type="hidden" value="" />
    <input id="emailtype" type="hidden" value="" />
    <input id="emailsubject" type="hidden" value="" />
    <input id="emailmessage" type="hidden" value="" />
</span>

<input id="useridparam" type="hidden" value="@Model.GetUrlParam("uid")" /> <!-- uid param, diplay detail -->

@{
    var redirecturl = Globals.NavigateURL(StoreSettings.Current.CartTabId, "");
}
<input id="redirecturl" type="hidden" value="@redirecturl" />

<input id="cmdEmailValidated" type="hidden" value="@ResourceKey("OrderAdmin.cmdEmailValidated","","confirm")" />
<input id="cmdEmailShipped" type="hidden" value="@ResourceKey("OrderAdmin.cmdEmailShipped","","confirm")" />
<input id="cmdEmailReceipt" type="hidden" value="@ResourceKey("OrderAdmin.cmdEmailReceipt","","confirm")" />
<input id="cmdEmailAmended" type="hidden" value="@ResourceKey("OrderAdmin.cmdEmailAmended","","confirm")" />

<div style="display: none;" id="csvfile"></div>
<div style="display: none;" id="actionreturn"></div>


<div id="pageactionssource">
    <!-- Page actions are moved into header bar - also exist at page bottom-->
    <div class="col-xs-9 col-sm-9">
        <a href="javascript:void(0)" class="show-sidebar">
            <i class="fa fa-bars"></i>
        </a>
        <div class="actionbuttonwrapper">
            <a id="OrderAdmin_cmdSave" style="display: none;" class="btn btn-primary primarybutton OrderAdmin_cmdSave " href="javascript:void(0)">@ResourceKey("General.cmdSaveButton")</a>
            <a id="OrderAdmin_cmdReturn" style="display: none;" class="btn btn-default primarydefault" href="javascript:void(0)">@ResourceKey("OrderAdmin.cmdReturnButton")</a>
        </div>
    </div>
</div>

<div id="datadisplay"></div>

