@inherits NBrightBuy.render.NBrightBuyRazorTokens<NBrightRazor>
@using System
@using System.Globalization
@using System.Linq
@using System.Text
@using System.Web
@using System.Web.Razor.Parser
@using System.Web.Razor.Parser.SyntaxTree
@using System.Xml
@using DotNetNuke.Common
@using NBrightDNN
@using Nevoweb.DNN.NBrightBuy.Components;
@using NBrightCore.common;

@AddMetaData("resourcepath", "/DesktopModules/NBright/NBrightBuy/App_LocalResources/")


<br />

<div class="row">
    <div class="col-xs-12 col-sm-12">
        <div class="box">
            <div class="box-header no-box-header">
                <div class="box-name">
                    <i class="fa fa-table"></i>
                    <span>pluginss</span>
                </div>
                <div class="box-icons">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content pluginsadmintable">
                <table id="pluginslistwrapper" class="table table-striped table-hover table-responsive">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th style="width:100%"></th>
                            <th>@ResourceKey("General.Hidden")</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>



@foreach (NBrightInfo nbi in Model.List)
{
    <tr>


        <td class="text-nowrap">@nbi.GetXmlPropertyInt("genxml/hidden/index").ToString()</td>
        <td class="text-nowrap">@nbi.GetXmlProperty("genxml/textbox/group")</td>
        <td class="text-nowrap">@nbi.GetXmlProperty("genxml/textbox/name")</td>
        <td class="text-nowrap">@nbi.GetXmlProperty("genxml/textbox/ctrl")</td>


        <td class="centered">
            @{
                var checkdisplay = "";
            }
            @if (nbi.GetXmlPropertyBool("genxml/checkbox/hidden"))
            {
                checkdisplay = "-check";
            }
            <a href="javascript:void(0)">
                <i class="fa fa@(checkdisplay)-circle fa-2x selectchangehidden" itemid="@nbi.ItemID"></i>
            </a>
        </td>
        <td>
            <a class="pluginsAdmin_cmdEdit" itemid="@nbi.ItemID" href="javascript:void(0)">@ResourceKey("General.cmdEditIcon")</a>
        </td><!-- editlink class added to show processing -->
        <td>
            <a title="@ResourceKey("General.cmdMove")" href="javascript:void(0)" class="selectrecord" itemid="@nbi.ItemID"><i class="fa fa-sort fa-fw fa-2x"></i></a>
            <a title="@ResourceKey("General.cmdCancel")" href="javascript:void(0)" class="selectcancel" itemid="@nbi.ItemID" style="display: none;"><i class="fa fa-times-circle fa-fw fa-2x"></i></a>
            <span class="selectmove" itemid="@nbi.ItemID" style="display: none;" parentlist="@nbi.GetXmlProperty("genxml/parentlist")">
                <a id="cmdMove">@ResourceKey("General.cmdMoveIcon")</a>
            </span>
        </td>
    </tr>
}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>











