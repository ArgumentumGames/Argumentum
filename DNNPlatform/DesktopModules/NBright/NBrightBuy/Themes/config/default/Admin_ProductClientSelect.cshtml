@inherits NBrightBuy.render.NBrightBuyRazorTokens<NBrightDNN.NBrightRazor>
@using System.Linq
@using DotNetNuke.Entities.Users
@using NBrightDNN
@using Nevoweb.DNN.NBrightBuy.Components

@AddMetaData("resourcepath", "/DesktopModules/NBright/NBrightBuy/App_LocalResources/")

@{
    var info = (NBrightInfo)Model.List.First();
}

<div class="row">

    <div class="col-xs-12 col-sm-12">
        <div class="box">
            <div class="box-header no-box-header">
                <div class="box-name">
                    <i class="fa fa-table"></i>
                    <span>@ResourceKey("General.Customers")</span>
                </div>
                <div class="box-icons">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
        </div>
    </div>
    <div class="box-content">
        <table class="table table-striped table-hover table-responsive">
            <thead>
                <tr>
                    <th>@ResourceKey("General.Client")</th>
                    <th>@ResourceKey("General.Email")</th>
                    <th>@ResourceKey("General.Username")</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>

                @foreach (NBrightInfo nbi in Model.List)
                {
                    <tr>
                        <td>@nbi.GetXmlProperty("genxml/textbox/firstname") @nbi.GetXmlProperty("genxml/textbox/lastname")</td>
                        <td>@nbi.GetXmlProperty("genxml/textbox/email")</td>
                        <td>@nbi.GetXmlProperty("genxml/textbox/username")</td>
                        <td><a title="Add" class="selectclient selectuserid@(nbi.ItemID)" itemid="@(nbi.ItemID)" href="javascript:void(0)"><i class="fa fa-plus-square"></i></a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
