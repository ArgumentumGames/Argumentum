<!-- Treeview menu https://github.com/tefra/navgoco -->
<script src="/DesktopModules/NBright/NBrightBuy/Themes/Bootstrap4/js/jquery.navgoco.js?4050"></script>

<!-- Get messages for JQuery validation -->
@{
    var langcode = Model.Lang;
    if (langcode == "")
    {
        langcode = Model.GetUrlParam("language");
    }
    if (langcode != "")
    {
        langcode = langcode.Substring(0, 2);
    }
}
@if (langcode != "" && langcode != "en")
{
    <script type="text/javascript" src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.9/localization/messages_@(langcode).js?4050"></script>
}

<script>
    $(document).ready(function () {
        var tabId = $("#tabid").val();
        if (!(tabId == "@(StoreSettings.Current.CartTabId)" ||
            tabId == "@(StoreSettings.Current.CheckoutTabId)" ||
            tabId == "@(StoreSettings.Current.PaymentTabId)")) {
            loadItemListPopup();
        }
    });
</script>
