@inherits NBrightBuy.render.NBrightBuyRazorTokens<NBrightDNN.NBrightRazor>
@using NBrightDNN

@AddMetaData("resourcepath", "/DesktopModules/NBright/NBrightBuy/App_LocalResources/")
@AddMetaData("resourcepath", "/DesktopModules/NBright/OS_Reports/App_LocalResources/")

<div class="row">
    <div class="col-xs-12 col-sm-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-search"></i><span></span>
                </div>
                <div class="box-icons">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a><a class="expand-link"><i class="fa fa-expand"></i></a>
                    <a class="close-link"><i class="fa fa-times"></i></a>
                </div>
                <div class="no-move">
                </div>
            </div>
            <div class="box-content">
                <div class="form-horizontal dnnForm">
                    <div class="form-group">
                        <label class="col-sm-1 control-label">@ResourceKey("General.Search")</label>
                        <div class="col-sm-2">
                            <input id="OrderAdmin_searchtext" class="form-control" type="text">
                        </div>
                        <div class="col-sm-6">
                            <a id="OS_Reports_cmdSearch" class="btn btn-primary primarybutton" href="javascript:void(0)"><i title="@ResourceKey("General.Search")" class="fa fa-search fa-fw fa-lg"></i> @ResourceKey("General.Search")</a>
                            <a id="OS_Reports_cmdReset" class="btn btn-default secondarybutton" href="javascript:void(0)"><i title="@ResourceKey("General.Reset")" class="fa fa-refresh fa-fw fa-lg"></i> @ResourceKey("General.Reset")</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-xs-12 col-sm-12">
        <div class="box">
            <div class="box-content">

                <table class="table table-striped table-hover table-responsive">
                    <thead>
                        <tr style="width: 100%">
                            <th>@ResourceKey("Admin.ref")</th><!--Name 'Ref' at the top of the chart -->
                            <th>@ResourceKey("Admin.name")</th><!--Name 'Report name' at the top of the chart -->
                            <th></th><!--Blank zone for 'Edit btn' at the top of the chart -->
                            <th></th><!--Blank zone for 'Generate btn' at the top of the chart -->
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (NBrightInfo x in Model.List)
                        {
                            // dummy record inject for empty list
                            if (x.ItemID > 0)
                            {
                        <tr>
                            <td>@x.GetXmlProperty("genxml/textbox/ref")</td><!--Inject data name 'Report name' of DB-->
                            <td>@x.GetXmlProperty("genxml/lang/genxml/textbox/name")</td><!--Inject data name 'Report name' of DB-->
                            <td><span class="edititem" itemid="@x.ItemID">@ResourceKey("General.cmdEditIcon")</span></td><!--Define in Admin.ascx.resx-->
                            <td><span class="rundisplay" itemid="@x.ItemID">@ResourceKey("View.runreport")<i title="@ResourceKey("Admin.runreport")" class="fa fa-cogs fa-fw fa-2x"></i></span></td><!--Define in Admin.ascx.resx-->
                        </tr>
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>