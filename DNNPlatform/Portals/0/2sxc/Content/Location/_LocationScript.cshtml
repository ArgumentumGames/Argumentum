@using ToSic.Razor.Blade;

<script type="text/javascript">
	$(function(){
		var markerImage = "@Text.First(PageData["markerImage"], "")";
		$("#GoogleMap-@(PageData["mapId"])").toGoogleMap({
			position: {
        lat: @PageData["mapInfo"].GpsLat.ToString().Replace(",","."),
				lng: @PageData["mapInfo"].GpsLong.ToString().Replace(",",".")
			},
			zoom: @Content.Presentation.Zoom,
			mapTypeId: "ROADMAP",
			infoWindowHtml: "@PageData["company"]",
			showInfoWindow: false,
			icon: markerImage
		});
	});
</script>