@inherits ToSic.Sxc.Dnn.RazorComponent
@using ToSic.Razor.Blade;
@{ 
    var parts = CreateInstance("../shared/_Parts.cshtml");
    var coverParts = CreateInstance("_Parts - Cover.cshtml");
}

<section class='app-landingpage-builder app-lp-cover @parts.SectionClasses()'
    @parts.SectionStyle()
    @Edit.TagToolbar(Header, toolbar: "settings&hover=left&autoAddMore=start&class=coverTagbar")
    >
    @parts.BackgroundDiv()
    <div class="container-fluid d-flex align-items-center">
        @RenderPage("../shared/_Block.cshtml")
        <div class="row align-items-center w-100 mt-5" @Edit.TagToolbar(Content) @Edit.Attribute("quick-edit-config", new { modules = new { enable = true }})>
            <div class="col-12 col-md-6 mb-5 order-md-2">
                @coverParts.Body()
                @parts.CtaList(Content.CTA)
            </div>
            @parts.VideoImageIconOrInnerContent(Content)
        </div>
        @parts.HeaderCta(Header.CTA)
    </div>
</section>

@RenderPage("../shared/_Assets.cshtml", new { parts = "styles,scripts,fancybox" })
